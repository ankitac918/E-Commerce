generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  image       String
  name        String
  price       Decimal
  description String
  categories  String
  location    String

  @@map("product")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  first_name String? 
  last_name  String?
  address    String?
  phone      String?
  email      String   @unique
  hash_pass  String

  @@map("users")
}
