generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  image       String
  name        String
  price       Decimal
  description String
  categories  String
  location    String

  @@map("product")
}

model User {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  firstName    String?
  lastName     String?
  address      String?
  city         String?
  phone        String?
  email        String    @unique
  image        String?
  hashPassword String

  @@map("users")
}

model address {
  id                  String    @id @default(uuid())
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  deletedAt           DateTime?
  categories          String
  streetAddress       String
  city                String
  zipCode             String
  deliveryInstruction String?
  feedback            String?
  locationType        String

  @@map("address")
}

model order {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  productId   String
  token       String
  name        String
  description String
  price       String
  location    String
  address     String
  city        String
  paymentType String
  quantity    String

  @@map("orders")
}
